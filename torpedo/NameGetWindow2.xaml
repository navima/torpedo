<Window x:Class="NationalInstruments.NameGetWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NationalInstruments"
        mc:Ignorable="d"
        Title="Please enter your name" Height="144" Width="198"
        ResizeMode="NoResize">

    <Grid Height="128" VerticalAlignment="Center">

        <Button Content="Submit" HorizontalAlignment="Left" Height="20" Margin="55,94,0,0" VerticalAlignment="Top" Width="73" Click="SubmitClicked"/>
        <TextBox x:Name="InputBox" HorizontalAlignment="Left" Margin="40,33,0,0" TextWrapping="Wrap" Text="{Binding Path=PlayerName1, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" VerticalAlignment="Top" Width="120" Height="18"/>
        <TextBox x:Name="InputBox2" HorizontalAlignment="Left" Margin="40,58,0,0" TextWrapping="Wrap" Text="{Binding Path=PlayerName2, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" VerticalAlignment="Top" Width="120" Height="18"/>

    </Grid>
</Window>
