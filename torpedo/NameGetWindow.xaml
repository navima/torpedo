<Window x:Class="NationalInstruments.NameGetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NationalInstruments"
        mc:Ignorable="d"
        Title="Please enter your name" Height="147" Width="203"
        ResizeMode="NoResize"
        Closing="closingEvent">
    
    <Grid Height="130" VerticalAlignment="Top">
        <Button Content="Submit" HorizontalAlignment="Left" Height="21" Margin="59,63,0,0" VerticalAlignment="Top" Width="73" Click="SubmitClicked"/>
        <TextBox x:Name="InputBox" HorizontalAlignment="Left" Margin="40,33,0,0" TextWrapping="Wrap" Text="Player" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" Height="18"/>

    </Grid>
</Window>
