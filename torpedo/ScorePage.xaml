<Page x:Class="NationalInstruments.ScorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NationalInstruments"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="800"
      Title="ScorePage">

    <Grid>
        <DataGrid x:Name="Datagrid" HorizontalAlignment="Left" Height="420" VerticalAlignment="Top" Width="800" ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Player 1" Width="1*" Binding="{Binding _score_player1}"/>
                <DataGridTextColumn Header="Player 2" Width="1*" Binding="{Binding _score_player2}"/>
                <DataGridTextColumn Header="Rounds" Width="1*" Binding="{Binding _score_rounds}"/>
                <DataGridTextColumn Header="Player1 Hits" Width="1*" Binding="{Binding _score_p1Hits}"/>
                <DataGridTextColumn Header="Player2 Hits" Width="1*" Binding="{Binding _score_p2Hits}"/>
                <DataGridTextColumn Header="Winner" Width="1*" Binding="{Binding _score_winner}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
